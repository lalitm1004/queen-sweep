{
    "manifest_version": 3,
    "name": "QueenSweep",
    "description": "Solve LinkedIn Queens",
    "version": "0.1.0",
    "host_permissions": [
        "https://lm04.me/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "background": {
        "service_worker": "scripts/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lm04.me/*"
            ],
            "js": [
                "scripts/content-script-reference.js"
            ],
            "runs_at": "document_idle"
        },
        {
            "matches": [
                "https://queensgame.vercel.app/level/*",
                "https://queensgame.vercel.app/community-level/*",
                "https://queensgame.vercel.app/bonus-level/*"
            ],
            "js": [
                "scripts/content-script-queensgame.js"
            ],
            "runs_at": "document_idle"
        },
        {
            "matches": [
                "https://www.linkedin.com/games/queens/"
            ],
            "js": [
                "scripts/content-script-linkedin.js"
            ],
            "runs_at": "document_idle"
        }
    ],
    "icons": {
        "16": "assets/icon_16.png",
        "32": "assets/icon_32.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "QueenSweep",
        "default_icon": {
            "16": "assets/icon_16.png",
            "32": "assets/icon_32.png"
        }
    }
}