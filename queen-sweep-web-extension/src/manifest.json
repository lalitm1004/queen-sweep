{
    "manifest_version": 3,
    "name": "QueenSweep",
    "description": "Solve LinkedIn Queens",
    "version": "0.1.1",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "assets/images/icon_16.png",
        "32": "assets/images/icon_32.png",
        "48": "assets/images/icon_48.png",
        "64": "assets/images/icon_64.png",
        "128": "assets/images/icon_128.png",
        "256": "assets/images/icon_256.png"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "assets/images/icon_16.png",
            "32": "assets/images/icon_32.png",
            "48": "assets/images/icon_48.png",
            "64": "assets/images/icon_64.png",
            "128": "assets/images/icon_128.png",
            "256": "assets/images/icon_256.png"
        }
    },
    "content_scripts": [
        {
            "js": [
                "scripts/contentScript.js"
            ],
            "matches": [
                "https://lm04.me/*"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "scripts/serviceWorker.js"
    },
    "host_permissions": [
        "https://lm04.me/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "wasm/*"
            ],
            "matches": [
                "https://lm04.me/*"
            ]
        }
    ]
}